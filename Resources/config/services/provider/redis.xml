<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="spy_timeline.provider.redis.class">Spy\TimelineBundle\Provider\Redis</parameter>
        <parameter key="spy_timeline.provider.redis.pipeline">true</parameter>
    </parameters>

    <services>
        <service id="spy_timeline.provider.redis" class="%spy_timeline.provider.redis.class%">
            <argument type="service" id="snc_redis.default_client"/>
            <argument type="service" id="spy_timeline.timeline_action_manager" />
            <argument type="collection">
                <argument key="pipeline">%spy_timeline.provider.redis.pipeline%</argument>
            </argument>
        </service>

        <service id="spy_timeline.provider" alias="spy_timeline.provider.redis" />
    </services>

</container>
