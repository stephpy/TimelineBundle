<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="spy_timeline.provider.doctrine.orm.class">Spy\TimelineBundle\Provider\Doctrine\ORMProvider</parameter>
    </parameters>

    <services>
        <service id="spy_timeline.provider.doctrine.orm" class="%spy_timeline.provider.doctrine.orm.class%">
            <argument type="service" id="spy_timeline.provider.object_manager"/>
            <argument>%spy_timeline.provider.timeline_class%</argument>
            <argument type="service" id="spy_timeline.timeline_action_manager" />
        </service>

        <service id="spy_timeline.provider" alias="spy_timeline.provider.doctrine.orm" />
    </services>

</container>
