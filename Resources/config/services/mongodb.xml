<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="highco.timeline.document_manager" alias="doctrine.odm.mongodb.document_manager" />

        <service id="highco.timeline_action_manager.default" class="Highco\TimelineBundle\Document\TimelineActionManager" public="false">
            <argument type="service" id="highco.timeline.document_manager" />
            <argument>%highco.timeline_action.model.class%</argument>
        </service>

        <service id="highco.timeline_listener" class="Highco\TimelineBundle\Document\TimelineActionListener" public="false">
            <tag name="doctrine_mongodb.odm.event_subscriber" />
        </service>
    </services>

</container>
