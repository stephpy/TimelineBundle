<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="spy_timeline.manager.class">Spy\TimelineBundle\Manager</parameter>
        <parameter key="spy_timeline.timeline_action.model.class">Spy\TimelineBundle\Entity\TimelineAction</parameter>
    </parameters>

    <services>
        <service id="spy_timeline.manager" class="%spy_timeline.manager.class%">
            <argument type="service" id="spy_timeline.timeline_action_manager" />
            <argument type="service" id="spy_timeline.spread.deployer" />
            <argument type="service" id="spy_timeline.provider" />
        </service>
    </services>

</container>
