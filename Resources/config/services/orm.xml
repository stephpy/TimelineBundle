<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="spy_timeline.entity_manager" alias="doctrine.orm.default_entity_manager" />

        <service id="spy_timeline.timeline_action_manager.default" class="Spy\TimelineBundle\Entity\TimelineActionManager" public="false">
            <argument type="service" id="spy_timeline.entity_manager" />
            <argument>%spy_timeline.timeline_action.model.class%</argument>
        </service>

        <service id="spy_entity_listener" class="Spy\TimelineBundle\Entity\EntityListener" public="false">
            <tag name="doctrine.event_subscriber" />
        </service>
    </services>

</container>
